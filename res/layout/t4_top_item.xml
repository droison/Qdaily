<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/t4_top_list_heigh"
    android:gravity="center_vertical"
    android:background="@color/t4_top_bg">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/t4_top_icon_bgwidth"
        android:src="@drawable/icon_top_default"
        android:id="@+id/t4_top_img1"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/t4_top_icon_bgwidth"
        android:src="@drawable/icon_top_default"
        android:id="@+id/t4_top_img2"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/t4_top_icon_bgwidth"
        android:src="@drawable/icon_top_default"
        android:id="@+id/t4_top_img3"
        android:layout_weight="1"/>
</LinearLayout>