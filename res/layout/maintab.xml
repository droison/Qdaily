<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#aaaaaa"
    android:layout_height="@dimen/maintab_height">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/maintab1"
        android:drawableTop="@drawable/maintab1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/maintab1" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/maintab2"
        android:drawableTop="@drawable/maintab2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/maintab2" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/maintab3"
        android:drawableTop="@drawable/maintab3"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/maintab3" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/maintab4"
        android:drawableTop="@drawable/maintab4"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:id="@+id/maintab4" />
</LinearLayout>