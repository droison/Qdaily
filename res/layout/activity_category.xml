<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/maintitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_hight"
        android:id="@+id/category_title"/>
    <com.droison.PullRefreshAndMoreView.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/category_pullview"
        android:orientation="vertical">
        <com.droison.staggeredGridView.StaggeredGridView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/category_gridview"
            />
    </com.droison.PullRefreshAndMoreView.PullToRefreshView>
</LinearLayout>