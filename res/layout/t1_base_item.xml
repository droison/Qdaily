<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="@dimen/t1_grid_margin" >

    <ImageView
        android:id="@+id/t1_base_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/t1_ppt_icon_width"
        android:layout_marginLeft="@dimen/t1_ppt_icon_margin"
        android:layout_marginTop="@dimen/t1_ppt_icon_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/t1_ppt_icon_width"
            android:layout_height="@dimen/t1_ppt_icon_width"
            android:src="@drawable/t4_category_icon_default"
            android:id="@+id/t1_base_icon_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t1_ppt_icon_margin"
            android:textColor="@color/white"
            android:id="@+id/t1_base_icon_text"
            android:textSize="@dimen/t1_ppt_icon_textsize"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/t1_ppt_title_size"
        android:layout_marginLeft="@dimen/t1_base_title_margin"
        android:layout_marginBottom="@dimen/t1_base_title_margin"
        android:layout_marginRight="@dimen/t1_base_title_margin"
        android:maxLines="3"
        android:id="@+id/t1_base_title"
        />
</RelativeLayout>