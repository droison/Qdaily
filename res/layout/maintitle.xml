<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_Ab_Title"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/main_title_hight"
    android:background="@color/main_bg_color" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip" >

        <ImageView
            android:visibility="visible"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:background="@drawable/title_one_back"
            android:onClick="finishView" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_one_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="量子财经"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_text" />
    <ImageView
        android:id="@+id/title_one_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:src="@drawable/offline_icon_pic_" />
</RelativeLayout>